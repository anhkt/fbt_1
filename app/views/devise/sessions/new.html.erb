<div class="session-new">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h1 class="text-center"><%= t "user_resources.login" %></h1>
      <hr>
      <%= form_for resource, as: resource_name,
        url: session_path(resource_name) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off",
            class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="form-group">
          <%= f.submit t("user_resources.login"),
            class: "btn btn-primary btn-block btn-lg" %>
        </div>
      <% end %>
      <div class="bottom text-center"><%= t ".new_here" %>
        <b>
          <%= link_to t(".signup"), new_user_registration_path %>
        </b>
      </div>
      <br>
      <%= link_to user_facebook_omniauth_authorize_path do %>
        <%= image_tag "facebook.jpg",
          size: Settings.size_60 %>
      <% end %>
      <%= link_to "#" do %>
        <%= image_tag "twitter.jpg",
          size: Settings.size_60 %>
      <% end %>
      <%= link_to "#" do %>
        <%= image_tag "instagram.jpg",
          size: Settings.size_60 %>
      <% end %>
      <%= link_to "#" do %>
        <%= image_tag "twitter.jpg",
          size: Settings.size_60 %>
      <% end %>
    </div>
  </div>
</div>
